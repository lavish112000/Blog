{
  "name": "vibrant-insights-enterprise-blog",
  "version": "2.0.0",
  "description": "An enterprise-level modern blog platform with advanced features: PWA support, real-time analytics, AI-powered search, advanced SEO, content management, and premium user experience",
  "main": "src/index.html",
  "scripts": {
    "start": "http-server src -p 8080 -o --cors",
    "dev": "concurrently \"webpack serve --mode development\" \"npm run json-server\"",
    "serve": "http-server src -p 3000 -o --cors",
    "live": "live-server src --port=5500 --cors",
    "build": "npm run clean && webpack --mode production && npm run optimize",
    "build:analyze": "npm run build && webpack-bundle-analyzer dist/main.bundle.js",
    "watch": "webpack --mode development --watch",
    "clean": "rimraf dist && rimraf .cache",
    "lint": "eslint src/js/**/*.js --fix",
    "lint:css": "stylelint src/css/**/*.css --fix",
    "format": "prettier --write src/**/*.{js,css,html,json,md}",
    "format:check": "prettier --check src/**/*.{js,css,html,json,md}",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "json-server": "json-server --watch src/data/api-data.json --port 3001 --cors",
    "optimize": "npm run optimize:images && npm run optimize:css",
    "optimize:images": "imagemin src/assets/**/*.{jpg,png,svg} --out-dir=dist/assets",
    "optimize:css": "postcss src/css/*.css --use autoprefixer cssnano --dir dist/css",
    "pwa": "workbox generateSW",
    "lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./reports/lighthouse.html",
    "security": "npm audit && snyk test",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "keywords": [
    "blog",
    "website",
    "responsive",
    "modern",
    "enterprise",
    "vibrant",
    "css3",
    "javascript",
    "webpack",
    "html5",
    "dark-mode",
    "search",
    "dynamic-content"
  ],
  "author": "GitHub Copilot",
  "license": "MIT",
  "dependencies": {
    "http-server": "^14.1.1",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0",
    "intersection-observer": "^0.12.2",
    "web-vitals": "^3.5.0",
    "workbox-sw": "^7.0.0",
    "chart.js": "^4.4.0",
    "prismjs": "^1.29.0",
    "marked": "^11.1.1",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-bundle-analyzer": "^4.10.1",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.6",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "prettier": "^3.1.1",
    "live-server": "^1.2.2",
    "concurrently": "^8.2.2",
    "json-server": "^0.17.4",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "lighthouse": "^11.4.0",
    "workbox-cli": "^7.0.0",
    "gh-pages": "^6.1.0",
    "snyk": "^1.1266.0"
  }
}
