      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Latest Articles",
      "short_name": "Articles",
      "description": "Browse the latest blog articles",
      "url": "/pages/blog.html",
      "icons": [
        {
          "src": "assets/icons/shortcut-articles.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search for articles and content",
      "url": "/?search=true",
      "icons": [
        {
          "src": "assets/icons/shortcut-search.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "About",
      "short_name": "About",
      "description": "Learn more about us",
      "url": "/pages/about.html",
      "icons": [
        {
          "src": "assets/icons/shortcut-about.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "categories": [
    "productivity",
    "education",
    "news",
    "social"
  ],
  
  "screenshots": [
    {
      "src": "assets/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Home page on desktop"
    },
    {
      "src": "assets/screenshots/mobile-home.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Home page on mobile"
    },
    {
      "src": "assets/screenshots/desktop-blog.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Blog page on desktop"
    },
    {
      "src": "assets/screenshots/mobile-blog.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Blog page on mobile"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "protocol_handlers": [
    {
      "protocol": "web+vibrantinsights",
      "url": "/handle-protocol?protocol=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/markdown": [".md", ".markdown"],
        "text/plain": [".txt"]
      },
      "icons": [
        {
          "src": "assets/icons/file-handler.png",
          "sizes": "256x256",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  }
}